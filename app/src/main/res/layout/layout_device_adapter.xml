<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">




        <TextView
            android:id="@+id/device_name"
            style="@style/tweetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:text="导盲智能巡航设备" />

        <TextView
            android:id="@+id/tweetText"
            style="@style/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="贾梓浚的设备"
            android:textColor="@android:color/darker_gray" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_device" />


        <TextView
            android:id="@+id/is_online"
            style="@style/tweetDate"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/device_name"
            android:layout_alignBottom="@+id/device_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="-18dp"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_10"
            android:text="在线"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/circle" />

        <Button
            android:id="@+id/button2"
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_above="@+id/tweetText"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-6dp"
            android:layout_toStartOf="@+id/is_online"
            android:background="#4CAF50" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
